[core]
	editor = nvim
  pager = delta
[delta]
  features = "config"
[delta "config"]
  dark = true
  syntax-theme = "Nord"
  line-numbers = true
[interactive]
  diffFilter = delta --color-only
[init]
  defaultBranch = main
[pull]
  rebase = true
[push]
	default = current
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
	prompt = false
[diff]
	tool = vimdiff
